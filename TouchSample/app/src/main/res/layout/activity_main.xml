<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_touch_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="touch_type" />

        <TextView
            android:id="@+id/text_view_touch_point1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="touch_point1" />

        <TextView
            android:id="@+id/text_view_touch_point2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="touch_point2" />

        <TextView
            android:id="@+id/text_view_touch_length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="touch_length" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>